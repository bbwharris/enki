<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.1 plus MathML 2.0 plus SVG 1.1//EN" "http://www.w3.org/2002/04/xhtml-math-svg/xhtml-math-svg-flat.dtd">
%html{"xmlns"=>"http://www.w3.org/1999/xhtml", "xml:lang"=>"en"}
%head
  %meta{"http-equiv"=>"Content-Type", :content=>"application/xhtml+xml", :charset=>"utf-8"}
  %title
    =yield(:page_title) || h(config[:title])
  =stylesheet_link_tag 'screen'
  =javascript_include_tag 'jquery'
  =open_id_delegation_link_tags(h(config[:open_id_delegation, :server]), h(config[:open_id_delegation, :delete])) if config[:open_id_delegation]
  =yield :head
%body
  #wrapper
    #container
      #header
        .subtitle
          A developing rant by
        %h1
          %a#logo{:href => config[:url]}=config[:title]
      #content
        #main
          =yield
        #sub
          #search
            %form{:method => "get", :id=>"sform", :action=>"http://www.google.com/search"}
              %h3
                %label{:for=>"q"} Search
                %input{:type=>"text", :id=>"q", :value=>"", :name=>"q", :class => 'textfield'}
                %input{:type=>"hidden", :name=>"sitesearch", :value=>config[:url]}
          #twitter_div
            %h3 Latest Tweet
            %ul#twitter_update_list
              %a{:href=>"http://twitter.com/bbwharris",:id=>"twitter-link",:style=>"display:block;text-align:right;"} follow me on Twitter            
          #pages
            %h3 Pages
            %ul
              -page_links_for_navigation.each do |link|
                %li=link_to(link.name, link.url)
          -unless category_links_for_navigation.empty?
            #categories
              %h3 Categories
              %ul
                -category_links_for_navigation.each do |link|
                  %li=link_to(link.name, link.url)

      #footer
        &#169;
        =config[:author, :name]
        powered by
        %a{:href => "http://enkiblog.com"} Enki
  :plain
    <script src='http://twitter.com/javascripts/blogger.js' type='text/javascript'></script>
    <script src='http://twitter.com/statuses/user_timeline/bbwharris.json?callback=twitterCallback2&amp;count=1' type='text/javascript'></script>
